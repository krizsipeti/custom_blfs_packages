    <bridgehead renderas="sect3">MiniDLNA Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="libexif"/>, and
      <xref linkend="libjpeg"/>
